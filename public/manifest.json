{
  "manifest_version": 3,
  "name": "DWUI New Tab",
  "version": "1.0.0",
  "description": "A modern, minimal new tab dashboard with search, clock, and customizable shortcuts.",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs",
    "search"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icons/logo-16x16.png",
    "32": "icons/logo-32x32.png",
    "48": "icons/logo-48x48.png",
    "128": "icons/logo-128x128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/logo-16x16.png",
      "32": "icons/logo-32x32.png"
    }
  }
}